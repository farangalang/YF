@model MyYouthFutures.Models.introArticle

@{
    Layout = null;
}
<div class="modal-header">
    <h4 class="modal-title" id="ServicesTitleLabel">Introduction Article</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ArticleText" class="control-label"></label>
                <textarea asp-for="ArticleText" class="form-control"></textarea>
                <span asp-validation-for="ArticleText" class="text-danger"  rows="15" cols="60"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
