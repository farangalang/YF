@model MyYouthFutures.Models.introArticle

@{
    ViewData["Title"] = "Edit";
}
<div class="sidepage edit">
    <h3>Edit</h3>
    <h4>Introduction</h4>
    <hr />
    <div class="row sidepage-content">
        <div class="col-xs-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="ArticleText" class="control-label"></label>
                    <textarea asp-for="ArticleText" class="form-control" rows="25" cols="100"></textarea>
                    <span asp-validation-for="ArticleText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-default">Back to List</a>
        <a asp-controller="Home" asp-action="About" class="btn btn-default">Back to Page</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>