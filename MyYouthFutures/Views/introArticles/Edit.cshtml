@model MyYouthFutures.Models.introArticle

@{
    ViewData["Title"] = "Edit";
}
<div class="sidepage edit">
    <h2>Introduction</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="ArticleText" class="control-label"></label>
                    <textarea asp-for="ArticleText" class="form-control" rows="25" cols="100"></textarea>
                    <span asp-validation-for="ArticleText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>