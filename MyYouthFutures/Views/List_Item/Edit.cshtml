@model MyYouthFutures.Models.List_Item

@{
    Layout = null;
}

<div class="modal-header">
    <h4 class="modal-title" id="ServicesTitleLabel">Sites</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="TypeOfList" class="control-label"></label>
                <input asp-for="TypeOfList" class="form-control" />
                <span asp-validation-for="TypeOfList" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LiTest" class="control-label"></label>
                <input asp-for="LiTest" class="form-control" />
                <span asp-validation-for="LiTest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
