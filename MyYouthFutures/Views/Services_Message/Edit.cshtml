@model MyYouthFutures.Models.Services_Message
@{
    Layout = null;
}

<div class="modal-header">
    <h4 class="modal-title" id="ServicesTitleLabel">Services</h4>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
</div>


<div class="row modal-body">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="MessageImage" class="control-label"></label>
                <input asp-for="MessageImage" class="form-control" />
                <span asp-validation-for="MessageImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageHeader" class="control-label"></label>
                <input asp-for="MessageHeader" class="form-control" />
                <span asp-validation-for="MessageHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <textarea asp-for="Message" class="form-control" rows="15" cols="60"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
