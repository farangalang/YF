@model MyYouthFutures.Models.FirstYear_Service_Messages

@{
    ViewData["Title"] = "Details";
}
<div class="sidepage edit">
    <h2>First Year Message</h2>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="firstYearImage" class="control-label"></label>
                    <input asp-for="firstYearImage" class="form-control" />
                    <span asp-validation-for="firstYearImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="firstYearText" class="control-label"></label>
                    <textarea asp-for="firstYearText" class="form-control" rows="15" cols="60"></textarea>
                    <span asp-validation-for="firstYearText" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>