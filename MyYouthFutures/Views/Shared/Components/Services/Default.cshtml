@model IEnumerable<MyYouthFutures.Models.Services_Message>
@* Title Section for Services *@
<section class="container-fluid services">
    <div class="row">
        <div class="col-xs-12">
            <h4 class="services-heading">Services</h4>
            <p class="mont-light-light-22 about-services"  ng-model ="ServicesDescription" edit-callback="editFunction(text, elem)" content-editable>Our programming is divided into three main areas. Each program area has specific components to meet the needs of the youth in need.<button ng-show="showSave">Save</button></p>
        </div>
    </div>
</section>
@* Panels for Services Offered *@
<section>
    <div class="row">
        <div class="boxes">

            @foreach (var item in Model)
            { 
                <article class="col-xs-3 panel">
                    <section class="panel-img-container">
                        <img src="@item.MessageImage" alt="House" class="panel-img" />
                    </section>
                    <section>
                        <p class="quicksand-light-32 panel-heading">@item.MessageHeader</p>
                    </section>
                    <section>
                        <p class="mont-light-light-18 panel-summary">@item.Message</p>
                    </section>
                    <section class="panel-footer">
                        <p class="quicksand-light-24-green"><a href="#">Learn more ></a></p>
                    </section>
                </article>
            @*<a asp-action="Edit" asp-route-id="@item.ID">Edit</a> 
              <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
              <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@       
            }
    
        </div>
    </div> 
</section>