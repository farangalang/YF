@* SERVICES TITLE *@
<section class="container-fluid services">
    <div class="row">
        <div class="col-xs-12">
            @foreach (Services SV in Model.Services)
            {
                <edit-container is-visible="User.Identity.IsAuthenticated">
                    <edit-area is-visible="User.Identity.IsAuthenticated">
                        <h4 class="services-heading" ng-model="ServicesTitle">@SV.Title</h4>
                        <p class="mont-light-light-22 about-services" ng-model="ServicesSubtitle">@SV.Header</p>
                    </edit-area>
                        <edit-link is-visible="User.Identity.IsAuthenticated">
                            <edit-a controller="Services" route-id="@SV.ID" is-visible="User.Identity.IsAuthenticated"></edit-a>
                        </edit-link>
                </edit-container>
            }

        </div>
    </div>
</section>
@* END SERVICES TITLE *@
@* Panels for Services Offered *@

<section>
    <div class="container text-center row" >
        <add-component controller="Services_Message" is-visible="User.Identity.IsAuthenticated">Add New Service</add-component>
    </div>
    <div class="row">
        <div class="boxes">
            @foreach (Services_Message SM in Model.Services_Message)
            {
                <div class="col-xs-3 panel ">
                    <edit-container is-visible="User.Identity.IsAuthenticated">
                        <article class="editArea">
                            <section class="panel-img-container">
                                <img src="@SM.MessageImage" alt="House" class="panel-img" />
                            </section>
                            <section ng-model="ServicesHeader[@SM.ID]">
                                <p class="quicksand-light-32 panel-heading">@SM.MessageHeader</p>
                            </section>
                            <section ng-model="ServicesDescription[@SM.ID]">
                                <p class="mont-light-light-18 panel-summary">@SM.Message</p>
                            </section>
                            <section class="panel-footer">
                                <p class="quicksand-light-24-green">
                                    <a asp-controller="@SM.TargetControler" asp-action="@SM.TargetAction" asp-fragment="@SM.TargetFragment">Learn more ></a>
                                </p>
                            </section>
                        </article>
                        <edit-link is-visible="User.Identity.IsAuthenticated">
                            <edit-a controller="Services_Message" route-id="@SM.ID" class="editText" is-visible="User.Identity.IsAuthenticated"></edit-a>
                        </edit-link>
                    </edit-container>
                </div>
            }

        </div>

    </div>
</section>
@* END Panels for Services Offered *@