<div class="container-fluid" id="directorsMain">
    <div class="row board_header">
        <div class="col-xs-6 text" id="Board">
            <h2>Board of</h2>
            <h2 class="h2style1">Directors</h2>
            <add-component controller="Staff_Panel" is-visible="User.Identity.IsAuthenticated" value="director">Add Directors</add-component>
        </div>
    </div>

    <div class="container">
        <!--Board of Directors-->
        <div class="row board_members ">

            @foreach (Staff_Panel st in Model.Staff)
            {
                if (st.Director.Equals("1"))
                {
                    <edit-container is-visible="User.Identity.IsAuthenticated">
                        <div class=" col-md-4 ">
                            <div class="editArea">
                                <span class="name">@st.Name</span><br />@st.Level<br />@st.Postion<br /> <span class="email">@st.email</span>
                            </div>

                            <edit-link is-visible="User.Identity.IsAuthenticated">
                                <edit-a controller="Staff_Panel" route-id="@st.ID" is-visible="User.Identity.IsAuthenticated" value="Directors"></edit-a>
                            </edit-link>
                        </div>
                    </edit-container>
                }

            }

        </div>
    </div>
</div>