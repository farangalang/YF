<div class="container-fluid" id="mediaMain">
    <div class="row media_header">
        <div class="col-xs-6 text" id="Media">
            <h2 class="h2style1">Media</h2>
        </div>
    </div>
    <div class="container-fluid">

        @foreach (Media med in Model.Media)
            {
            <edit-container is-visible="User.Identity.IsAuthenticated">
                <div class="editArea">
                    <div class="row media_subheader">
                        <div class="col-xs-12">
                            <p class="title">@med.Title</p>
                            <p class="mont_regular_22_darkgray time">@med.Time</p>
                            <a class="link" href="#">inShare</a>
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div class="row media_pic">
                            <div class="col-xs-12 col-lg-7 pic">
                                <img src="@med.Image" class="img-responsive center-block" title="America First Check" alt="Check">
                            </div>
                            <div class="col-xs-12 col-lg-5 subtext">
                                <p class="subtitle">@med.SubTitle</p>
                            </div>
                        </div>
                    </div>

                    <div class="container-fluid">
                        <div class="row media_text">
                            <section class="col-xs-12">
                                <p class="mont_regular_22_darkgray">@med.Content_Text</p>
                            </section>
                        </div>
                    </div>
                </div>
                <edit-link is-visible="User.Identity.IsAuthenticated">
                    <edit-a controller="Media" route-id="@med.ID" is-visible="User.Identity.IsAuthenticated"></edit-a>
                </edit-link>
            </edit-container>
        }

    </div>
</div>

