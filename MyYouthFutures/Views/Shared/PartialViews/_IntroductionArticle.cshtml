@* ------INTRODUCTION ARTICLE ------ *@
<div class="container-fluid" >
    <div class="row history_text">
        <section class="col-xs-12">
            @foreach (introArticle ia in Model.introArticles)
            {
                if (ia.ID == 1)
                {
                    <p class="mont_regular_22_darkgray  editArea">@ia.ArticleText</p>
                    <edit-link>
                        <edit-a controller="introArticles" route-id="@ia.ID"></edit-a>
                    </edit-link>
                }
            }
        </section>

    </div>
</div>
@* ------END INTRODUCTION ARTICLE ------ *@