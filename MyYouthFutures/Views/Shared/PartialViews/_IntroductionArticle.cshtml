@* ------INTRODUCTION ARTICLE ------ *@
<div class="container-fluid">
    <div class="row history_text">
        <section class="col-xs-12">
            @foreach (introArticle ia in Model.introArticles)
            {
                if (ia.ID == 1)
                {
                    <p class="mont_regular_22_darkgray">@ia.ArticleText</p>
                    <a asp-controller="introArticles" asp-action="Edit" asp-route-id="@ia.ID">Edit</a>
                }
            }
        </section>

    </div>
</div>
@* ------END INTRODUCTION ARTICLE ------ *@