@model IEnumerable<MyYouthFutures.Models.Events>

@{
        ViewData["Title"] = "Index";
    }
<div class="sidepage index">
    <h2>Index</h2>

    <a asp-action="Create" class="btn btn-primary btn-right"><span class="glyphicon glyphicon-plus"></span>Create New</a>
    <h4>Calendar: Events</h4>
    <hr />

    <div class="sidepage-content">
        <table class="table ">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EventTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.What)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.When)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Where)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Info)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.EventTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.What)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.When)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Where)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Info)
                        </td>
                        <td class="glyphs">
                            <a asp-action="Edit" asp-route-id="@item.ID" data-toggle="tooltip" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                            <a asp-action="Details" asp-route-id="@item.ID" data-toggle="tooltip" title="Details" class="border-left"><span class="glyphicon glyphicon-list"></span></a>
                            <a asp-action="Delete" asp-route-id="@item.ID" data-toggle="tooltip" title="Delete" class="border-left"><span class="glyphicon glyphicon-trash"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <hr />
    <a asp-controller="Home" asp-action="About" asp-fragment="Calendar" class="btn btn-default back"><span class="glyphicon glyphicon-triangle-left"></span>Back to Page </a>

</div>