@model Events

@{
    ViewData["Title"] = "Edit";
}
<div class="sidepage edit">
    <h2>Edit</h2>

    <h4>Calendar: Event #@Model.ID</h4>
    <hr />
    <div class="row sidepage-content">
        <div class="col-xs-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label asp-for="EventTitle" class="control-label"></label>
                    <input asp-for="EventTitle" class="form-control" />
                    <span asp-validation-for="EventTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="What" class="control-label"></label>
                    <input asp-for="What" class="form-control" />
                    <span asp-validation-for="What" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="When" class="control-label"></label>
                    <input asp-for="When" class="form-control" />
                    <span asp-validation-for="When" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Where" class="control-label"></label>
                    <input asp-for="Where" class="form-control" />
                    <span asp-validation-for="Where" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Info" class="control-label"></label>
                    <input asp-for="Info" class="form-control" />
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <hr />
    <div>
        <a asp-action="Index" class="btn btn-default back"><span class="glyphicon glyphicon-triangle-left"></span>Back to List</a>
    </div>
    <div>
        <a asp-controller="Home" asp-action="About" asp-fragment="Calendar"class="btn btn-default back"><span class="glyphicon glyphicon-triangle-left"></span>Back to Page</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>